<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/request_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Title"
            android:textSize="30dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/request_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_title"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Request Description"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_description"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Customer Name"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_cust_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_cust_name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Customer Address"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_cust_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_cust_address"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Customer City"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_cust_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_cust_city"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Customer PinCode"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_cust_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_cust_pin"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Customer Phone"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_cust_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_cust_phone"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Customer Phone"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/request_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_cust_email"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Request Date"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_date"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Request Time"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/request_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_time"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Service Charge"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/item_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_service"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Item Cost"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_cost"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Discount"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/total_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discount"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Total Cost"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/emp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_cost"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Employee Name"
            android:textSize="30dp" />
    </LinearLayout>
</ScrollView>