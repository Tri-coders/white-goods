<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_arrow_back_24" />

            <ImageButton
                android:id="@+id/saveProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_baseline_edit_24" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">

            <ImageButton
                android:id="@+id/edit_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:src="@drawable/potrait" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/input"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:hint="@string/user_id"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="15dp"
                android:textColor="@color/font"
                android:enabled="false"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/email_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:drawableStart="@drawable/ic_baseline_mail_outline_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="15dp"
                android:textColor="@color/font"
                android:enabled="false" />


            <EditText
                android:id="@+id/name_admin"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:hint="@string/name"
                android:paddingHorizontal="15dp"
                android:textColor="@color/font"
                android:enabled="false" />

            <EditText
                android:id="@+id/phone_admin"
                android:inputType="phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:hint="Phone No"
                android:paddingHorizontal="15dp"
                android:textColor="@color/font"
                android:enabled="false" />

            <EditText
                android:id="@+id/address_admin"
                android:layout_width="350dp"
                android:inputType="textPostalAddress"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:hint="@string/address"
                android:paddingHorizontal="15dp"
                android:textColor="@color/font"
                android:enabled="false" />

            <EditText
                android:id="@+id/city_admin"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:drawableStart="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:hint="@string/city"
                android:paddingHorizontal="15dp"
                android:textColor="@color/font"
                android:enabled="false" />

            <EditText
                android:id="@+id/pincode_admin"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:drawableStart="@drawable/ic_baseline_pin_drop_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_regular"
                android:hint="@string/pincode"
                android:paddingHorizontal="15dp"
                android:textColor="@color/font"
                android:enabled="false" />


            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/role"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/demo_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/checkbox"
                    android:paddingHorizontal="10dp"
                    android:text="Demo Instructor"
                    android:enabled="false"/>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/install_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/checkbox"
                    android:paddingHorizontal="10dp"
                    android:text="Installer"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/inventory_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/checkbox"
                    android:paddingHorizontal="10dp"
                    android:text="Inventory handler"
                    android:enabled="false" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/upgrade_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/checkbox"
                    android:paddingHorizontal="10dp"
                    android:text="Upgradator"
                    android:enabled="false" />

            </LinearLayout>

            <Button
                android:id="@+id/saveEdit_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/button"
                android:fontFamily="@font/opensans_semibold"
                android:text="Edit"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button2"
                android:fontFamily="@font/opensans_semibold"
                android:text="Delete Employee"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/progressBar_admin"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
