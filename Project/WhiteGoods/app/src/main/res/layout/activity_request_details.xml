<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="05dp"
                android:background="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/filter"
                android:layout_toEndOf="@+id/back"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Request Details"
                android:textColor="@color/font"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_filter"
                android:visibility="invisible" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Request Details"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Request Id"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Request Title"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Request Description"
                android:textColor="@color/font"
                android:textSize="18sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Date and Time(YYYY/MM/DD)"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/rDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Request Date"
                    android:textColor="@color/font"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/request_date"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Request Time"
                    android:textColor="@color/font"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Employee Name"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Employee Name"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Customer Details"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Customer Name"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Customer Address"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Customer City"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Customer Pincode"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/request_cust_pin"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Customer Phone"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/request_cust_phone"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Customer Email"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Payment Details"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Service Charge"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Discount"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Discount"
                android:textColor="@color/font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Total Cost"
                android:textColor="@color/font"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>